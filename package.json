{
  "name": "farmcrm",
  "version": "1.0.0",
  "description": "Farm CRM - система для ведения заказов частного фермерского хозяйства",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && ./mvnw spring-boot:run",
    
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && ./mvnw clean package -DskipTests",
    
    "test": "npm run test:client && npm run test:server",
    "test:client": "echo 'No client tests configured yet'",
    "test:server": "cd server && ./mvnw test",
    
    "clean": "npm run clean:client && npm run clean:server",
    "clean:client": "cd client && npm run clean",
    "clean:server": "cd server && ./mvnw clean",
    
    "install:all": "npm run install:client",
    "install:client": "cd client && npm install",
    
    "docker:dev": "docker-compose up --build",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/timerdar/farmCrm.git"
  },
  "author": "Айдар Тимергазин <timergazin24@mail.ru>",
  "license": "MIT"
}
